<Window x:Class="The_Ezio_Trilogy_Launcher_Updater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:The_Ezio_Trilogy_Launcher_Updater"
        mc:Ignorable="d"
        Title="Assassin's Creed - The Ezio Trilogy Updater" Height="200" Width="310" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <Label Content="Downloading new version" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,90" FontSize="18"></Label>
        <ProgressBar x:Name="Progress" Height="20" Width="270" Minimum="0" Maximum="100"></ProgressBar>
        <Button x:Name="OpenLauncher" Content="Open Launcher" HorizontalAlignment="Center" Margin="0,100,0,0" VerticalAlignment="Center" IsEnabled="False" FontSize="18" Click="OpenLauncher_Click"></Button>
    </Grid>
</Window>
